<%= render "layouts/errors", :object => @question %>

<div class="well">
  <%= form_for @question do |f| %>
    <div class="form-group">
      <%= f.label :title %>
    </div>
    <div class="form-group">
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label :question %>
    </div>
    <div class="form-group">
      <%= f.text_area :query, size: "60x8" %>
    </div>
    <div class="form-group">
      <%= f.submit class: 'btn btn-sm btn-warning'%>
    </div>
  <% end %>
</div>
